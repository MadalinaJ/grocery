<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/messages.ejs %>

    <main class="container">

      <div id="content">
      <div class="container">
        <div class="jumbotron">

      <h1 style="background-color: #2c3e50; color:#dc3545;">Add New Item</h1>

      <form action="/lists/<%= listId %>/items/create" method="post">
        <div class="form-group">
          <label for="title" style="color: #2c3e50; font-weight: bold;">Item Title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">title must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="body" style="color: #2c3e50; font-weight: bold;">Item description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Post body"></textarea>
          <small class="text-muted" id="bodyHelp">description must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #2c3e50; color:#20c997; font-weight: bold;">Submit</button>
      </form>
    </div>
    </div>
      </div>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>