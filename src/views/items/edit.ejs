<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <div id="content">
      <div class="container">
        <div class="jumbotron">
      <h1 style="background-color: #2c3e50; color:#20c997;">Edit Item</h1>

      <form action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="post">
        <div class="form-group">
          <label for="title" style="color:#2c3e50; font-weight: bold;">Edit Title</label>
          <input value="<%= item.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description" style="color: #2c3e50;font-weight: bold">edit description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #dc3545; color:#2c3e50; font-weight: bold">Update</button>
      </form>
    </div>
  </div>
  </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>