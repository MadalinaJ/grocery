  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

    <div id="content">
      <div class="container">
        <div class="jumbotron">
      <h1 style="background-color: #2c3e50; color:#20c997;">New List</h1>

      <form action="/lists/create" method="post">
        <div class="form-group">
          <label for="title" style="color:#2c3e50; font-weight: bold">List title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description" style="color:#2c3e50; font-weight: bold">Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #dc3545; color:#2c3e50; font-weight: bold">Submit</button>
      </form>
    </div>
  </div>
  </div>
