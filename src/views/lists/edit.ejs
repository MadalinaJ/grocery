<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <div id="content">
      <div class="container">
        <div class="jumbotron">
      <h1>Edit List</h1>

      <form action="/lists/<%= list.id %>/update" method="post">
        <div class="form-group">
          <label for="title" style="color: #2c3e50;font-weight: bold;">Title</label>

          <input value="<%= list.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description" style="color: #2c3e50;font-weight: bold;">Description</label>

          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= list.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
  </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>